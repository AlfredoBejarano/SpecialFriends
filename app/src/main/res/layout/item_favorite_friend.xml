<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_friend"
    android:layout_width="96dp"
    android:layout_height="122dp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingEnd="8dp"
    android:paddingStart="8dp">

    <ImageView
        android:id="@+id/item_friend_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bk_friend_picture"
        android:contentDescription="@string/friend_picture"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_friend_picture"
        tools:text="Andrea Molina" />

</android.support.constraint.ConstraintLayout>